<script id="worker-js" type="javascript/worker">
    self.onmessage = function(e) {
        const { raw, mr, means, limitsInd, limitsMr, limitsBar, sigmaBar, rules } = e.data;
        const viols = [];

        function addViol(chart, i, x, v, c, d, t, ruleId) {
            viols.push({ chart, i, x, v, c, d, t, ruleId });
        }

        // 1) REGRA 1 (3 sigma)
        if (rules.r1) {
            for (let i = 0; i < raw.length; i++) {
                if (raw[i] > limitsInd.ucl || raw[i] < limitsInd.lcl) {
                    addViol('IND', i, i + 1, raw[i], 'Causa Especial (3σ)', 'Ponto individual fora dos limites', 'crit', 'R1');
                }
            }
            for (let i = 0; i < mr.length; i++) {
                if (mr[i] > limitsMr.ucl) {
                    addViol('MR', i + 1, i + 2, mr[i], 'Instabilidade (3σ)', 'Amplitude móvel alta', 'warn', 'R1');
                }
            }
            for (let i = 0; i < means.length; i++) {
                const val = means[i];
                if (val > limitsBar.ucl || val < limitsBar.lcl) {
                    addViol('XBAR', i, i + 1, val, 'Fora de Controle (3σ)', 'Média subgrupo fora dos limites', 'crit', 'R1');
                }
            }
        }

        // 2) REGRA 2 (9 pts lado)
        if (rules.r2 && means.length >= 9) {
            const cl = limitsBar.cl;
            for (let i = 8; i < means.length; i++) {
                const sub = means.slice(i - 8, i + 1);
                if (sub.every(v => v > cl) || sub.every(v => v < cl)) {
                    addViol('XBAR', i, i + 1, means[i], 'Deslocamento (9 pts)', '9 pontos do mesmo lado da média', 'warn', 'R2');
                }
            }
        }

        // 3) REGRA 3 (2 de 3 > 2 sigma)
        if (rules.r3 && means.length >= 3 && sigmaBar > 0) {
            const cl = limitsBar.cl; const t2 = 2 * sigmaBar;
            for (let i = 2; i < means.length; i++) {
                const w = means.slice(i - 2, i + 1);
                let a = 0, b = 0;
                w.forEach(v => { if (v > cl + t2) a++; if (v < cl - t2) b++; });
                if (a >= 2 || b >= 2) addViol('XBAR', i, i + 1, means[i], 'Padrão (2 de 3 > 2σ)', '2 de 3 pontos além de 2σ', 'warn', 'R3');
            }
        }

        // 4) REGRA 4 (4 de 5 > 1 sigma)
        if (rules.r4 && means.length >= 5 && sigmaBar > 0) {
            const cl = limitsBar.cl; const t1 = sigmaBar;
            for (let i = 4; i < means.length; i++) {
                const w = means.slice(i - 4, i + 1);
                let a = 0, b = 0;
                w.forEach(v => { if (v > cl + t1) a++; if (v < cl - t1) b++; });
                if (a >= 4 || b >= 4) addViol('XBAR', i, i + 1, means[i], 'Padrão (4 de 5 > 1σ)', '4 de 5 pontos além de 1σ', 'warn', 'R4');
            }
        }

        // 5) REGRA 5 (Tendência 6 pts)
        if (rules.r5 && means.length >= 6) {
            for (let i = 5; i < means.length; i++) {
                const w = means.slice(i - 5, i + 1);
                let inc = true, dec = true;
                for (let j = 1; j < w.length; j++) {
                    if (!(w[j] > w[j - 1])) inc = false;
                    if (!(w[j] < w[j - 1])) dec = false;
                    if (!inc && !dec) break;
                }
                if (inc || dec) addViol('XBAR', i, i + 1, means[i], 'Tendência (6 pts)', '6 pontos consecutivos cresc/decresc', 'warn', 'R5');
            }
        }

        self.postMessage(viols);
    };
</script>

<script>
    const COLORS = { brand: '#44546A', alert: '#EF4444', text: '#334155', grid: '#E2E8F0' };
    const MAX_FILE_SIZE = 20 * 1024 * 1024; // 20 MB

    const SPC = {
        factors: (n) => { const t={2:{A2:1.88,d2:1.128},3:{A2:1.02,d2:1.693},4:{A2:0.73,d2:2.059},5:{A2:0.58,d2:2.326}}; return t[n]||{A2:0.31,d2:3.08}; },
        mean: d => d.length ? d.reduce((a,b)=>a+b,0)/d.length : 0,
        stdDev: (d,m) => d.length>1 ? Math.sqrt(d.reduce((a,b)=>a+(b-m)**2,0)/(d.length-1)) : 0,
        movingRange: d => { const mr=[]; for(let i=1; i<d.length; i++) mr.push(Math.abs(d[i]-d[i-1])); return mr; },
        avgRange: (d,n) => { let s=0,c=0; for(let i=0;i<d.length;i+=n){const sub=d.slice(i,i+n); if(sub.length===n){s+=(Math.max(...sub)-Math.min(...sub));c++;}} return c?s/c:0; },
        cdf: (x,m,s) => { let z=(x-m)/s,t=1/(1+.2316*Math.abs(z)),d=.3989*Math.exp(-z*z/2),p=d*t*(.3193+t*(-.3565+t*(1.781+t*(-1.821+t*1.33)))); return z>0?1-p:p; },
        iqrFilter: (d) => {
            if (!d.length) return [];
            const s=[...d].sort((a,b)=>a-b);
            const q1=s[Math.floor((s.length-1)*0.25)], q3=s[Math.floor((s.length-1)*0.75)], iqr=q3-q1;
            return d.filter(x => x>=q1-1.5*iqr && x<=q3+1.5*iqr);
        }
    };

    const Charts = {
        base: {
            margin: { t: 40, b: 35, l: 65, r: 80 }, 
            paper_bgcolor: 'white', plot_bgcolor: 'white',
            showlegend: false,
            font: { family: 'Roboto', size: 14, color: COLORS.text },
            xaxis: { showgrid: false, color: '#94A3B8' },
            yaxis: { showgrid: true, gridcolor: COLORS.grid, color: '#94A3B8' },
            hoverlabel: { font: { size: 16 } }
        },
        draw: (id, y, x, lim, type, notes) => {
            const { cl, ucl, lcl } = lim;
            const trace = { x: x, y: y, type: 'scattergl', mode: 'lines+markers', line: {color:'#94A3B8', width:1}, marker: {color:'white', size:5, line:{color:COLORS.brand, width:2}} };
            
            const shapes = [
                {type:'line', x0:0, x1:1, xref:'paper', y0:cl, y1:cl, line:{color:COLORS.brand, width:2}},
                {type:'line', x0:0, x1:1, xref:'paper', y0:ucl, y1:ucl, line:{color:COLORS.alert, width:1.5, dash:'dot'}}
            ];
            if(type !== 'MR') shapes.push({type:'line', x0:0, x1:1, xref:'paper', y0:lcl, y1:lcl, line:{color:COLORS.alert, width:1.5, dash:'dot'}});

            const annots = [
                {x:1, xref:'paper', y:cl, text:`x̄ ${cl.toFixed(2)}`, xanchor:'left', showarrow:false, font:{color:COLORS.brand, weight:700}},
                {x:1, xref:'paper', y:ucl, text:`UCL ${ucl.toFixed(2)}`, xanchor:'left', showarrow:false, font:{color:COLORS.alert, size:11}}
            ];
            if(type !== 'MR') annots.push({x:1, xref:'paper', y:lcl, text:`LCL ${lcl.toFixed(2)}`, xanchor:'left', showarrow:false, font:{color:COLORS.alert, size:11}});

            Plotly.react(id, [trace], { ...Charts.base, shapes, annotations: annots }, {responsive:true});
        },
        
        drawCap: (id, data, mean, sW, sO, lie, lse) => {
            if (!data || !data.length) { Plotly.react(id, [], { ...Charts.base, title: 'Capabilidade - sem dados' }); return; }
            const min=Math.min(...data), max=Math.max(...data), r=max-min || 1;
            const x=[], yW=[], yO=[];
            for(let i=0; i<=100; i++) {
                const v = min-r*0.2 + (r*1.4*(i/100)); x.push(v);
                const pdf = (v,s) => (1/(s*Math.sqrt(2*Math.PI)))*Math.exp(-0.5*((v-mean)/s)**2);
                yW.push(sW>0?pdf(v,sW):0); yO.push(sO>0?pdf(v,sO):0);
            }
            const shapes = [];
            if(!isNaN(lie)) shapes.push({type:'line', x0:lie, x1:lie, y0:0, y1:1, yref:'paper', line:{color:COLORS.alert, width:3}});
            if(!isNaN(lse)) shapes.push({type:'line', x0:lse, x1:lse, y0:0, y1:1, yref:'paper', line:{color:COLORS.alert, width:3}});

            Plotly.react(id, [
                {x:data, type:'histogram', histnorm:'probability density', marker:{color:'rgba(68,84,106,0.2)'}, name:'Histograma'},
                {x:x, y:yW, type:'scatter', mode:'lines', line:{color:COLORS.brand, width:3}, name:'Potencial (within)'},
                {x:x, y:yO, type:'scatter', mode:'lines', line:{color:'#94A3B8', width:2, dash:'dash'}, name:'Real (global)'}
            ], { ...Charts.base, shapes, showlegend:true, legend:{orientation:'h', y:-0.15}, title: 'Gráfico de Capabilidade' });
        },

        drawPareto: (id, viols) => {
            if (!viols || !viols.length) { Plotly.react(id, [], { ...Charts.base, title: 'Sem causas especiais' }); return; }
            const labelsMap = { R1:'R1 (3σ)', R2:'R2 (Deslocamento)', R3:'R3 (Alerta 2σ)', R4:'R4 (Alerta 1σ)', R5:'R5 (Tendência)' };
            const counts = {}; viols.forEach(v => { if(v.ruleId) counts[v.ruleId] = (counts[v.ruleId]||0)+1; });
            const entries = Object.entries(counts).sort((a,b)=>b[1]-a[1]);
            const labels = entries.map(e => labelsMap[e[0]] || e[0]);
            const vals = entries.map(e => e[1]);
            const total = vals.reduce((a,b)=>a+b,0);
            let cum = 0; const cumPerc = vals.map(v => { cum += v; return 100 * cum / total; });

            Plotly.react(id, [
                { x: vals, y: labels, type: 'bar', orientation: 'h', marker: {color:'rgba(68,84,106,0.8)'}, name:'Freq' },
                { x: cumPerc, y: labels, type: 'scatter', mode: 'lines+markers', xaxis: 'x2', marker:{color:'#F97316'}, name:'%' }
            ], {
                ...Charts.base, title: 'Pareto de Causas Especiais',
                xaxis: { title:'Contagem', domain:[0,0.7] },
                xaxis2: { title:'Acumulado (%)', overlaying:'x', side:'top', range:[0,105], domain:[0.3,1] },
                yaxis: { automargin: true }, showlegend: false
            });
        }
    };

    const App = {
        data: [], notes: [], worker: null,
        state: { vals:[], m:0, sW:1, sO:1, lie:NaN, lse:NaN },
        lastViolations: [],
        eventNotes: {}, 
        currentNoteKey: null,

        init: () => {
            Charts.draw('chart-top', [], [], {cl:0,ucl:1,lcl:-1}, 'IND', []);
            Charts.draw('chart-mr', [], [], {cl:0,ucl:1,lcl:0}, 'MR', []);
            Charts.draw('chart-btm', [], [], {cl:0,ucl:1,lcl:-1}, 'XBAR', []);
            
            const pt = document.getElementById('chart-top');
            const pm = document.getElementById('chart-mr');
            const pb = document.getElementById('chart-btm');
            
            pt.on('plotly_relayout', e => { 
                if(e['xaxis.range[0]']) {
                    const r = [e['xaxis.range[0]'], e['xaxis.range[1]']];
                    Plotly.relayout(pm, {'xaxis.range': r});
                    Plotly.relayout(pb, {'xaxis.range': [r[0]/5, r[1]/5]});
                }
            });

            document.getElementById('fileInput').addEventListener('change', App.load);
            ['selY','nSize','lie','lse','chk-outliers','rule-1','rule-2','rule-3','rule-4','rule-5','win-last']
                .forEach(id => document.getElementById(id).addEventListener('change', App.calc));

            const b = new Blob([document.getElementById('worker-js').textContent], {type:'text/javascript'});
            App.worker = new Worker(URL.createObjectURL(b));
            App.worker.onmessage = App.onWork;
        },

        showMsg: (txt) => {
            const m = document.getElementById('msg'); m.textContent = txt || ''; m.style.display = txt ? 'block' : 'none';
        },

        load: (e) => {
            const file = e.target.files && e.target.files[0];
            App.showMsg(''); if (!file) return;
            if (file.size > MAX_FILE_SIZE) { App.showMsg('Arquivo muito grande (Max 20MB)'); return; }

            const r = new FileReader();
            r.onload = ev => {
                try {
                    const wb = XLSX.read(new Uint8Array(ev.target.result), {type:'array'});
                    const sheet = wb.Sheets[wb.SheetNames[0]];
                    const json = XLSX.utils.sheet_to_json(sheet);
                    if (!json || !json.length) { App.showMsg('Arquivo sem dados'); return; }
                    App.data = json;
                    const s = document.getElementById('selY'); s.innerHTML='<option value="">Coluna...</option>';
                    Object.keys(App.data[0]).forEach(k => s.add(new Option(String(k), String(k))));
                    for (let k in App.data[0]) { if(!isNaN(parseFloat(App.data[0][k]))) { s.value=k; break; } }
                    App.calc();
                } catch (err) { App.showMsg('Erro leitura (CSV/XLSX)'); }
            };
            r.readAsArrayBuffer(file);
        },

        setWindow: (n) => {
            document.getElementById('win-last').value = n > 0 ? n : '';
            App.calc();
        },

        openNoteModal: (chart, x) => {
            const key = chart + ':' + x;
            App.currentNoteKey = key;
            const existing = App.eventNotes[key] || { cause:'', action:'' };
            document.getElementById('note-point-label').textContent = '#' + x;
            document.getElementById('note-chart-label').textContent = chart;
            document.getElementById('note-cause').value = existing.cause;
            document.getElementById('note-action').value = existing.action;
            document.getElementById('note-overlay').style.display = 'flex';
        },
        closeNoteModal: () => { App.currentNoteKey = null; document.getElementById('note-overlay').style.display = 'none'; },
        saveNoteForCurrent: () => {
            if (!App.currentNoteKey) return;
            const cause = document.getElementById('note-cause').value.trim();
            const action = document.getElementById('note-action').value.trim();
            if (!cause && !action) delete App.eventNotes[App.currentNoteKey];
            else App.eventNotes[App.currentNoteKey] = { cause, action };
            App.closeNoteModal();
            // Re-render log para mostrar ícone
            App.onWork({ data: App.lastViolations }); 
        },
        clearNoteForCurrent: () => {
            if (App.currentNoteKey) delete App.eventNotes[App.currentNoteKey];
            document.getElementById('note-cause').value = '';
            document.getElementById('note-action').value = '';
        },
        handleLogClick: (chart, x, z1, z2) => {
            Plotly.relayout('chart-top', {'xaxis.range':[z1, z2]});
            App.openNoteModal(chart, x);
        },

        openModal: (t) => {
            document.getElementById('modal-overlay').style.display='flex';
            const { vals, m, sW, sO, lie, lse } = App.state;
            if (t==='cap') Charts.drawCap('modal-plot-area', vals, m, sW, sO, lie, lse);
            else if (t==='box') Plotly.react('modal-plot-area', [{y:vals, type:'box', boxmean:'sd', marker:{color:COLORS.brand}}], {...Charts.base, title:'Boxplot'});
            else if (t==='pareto') Charts.drawPareto('modal-plot-area', App.lastViolations);
        },
        closeModal: () => document.getElementById('modal-overlay').style.display='none',

        calc: () => {
            const col = document.getElementById('selY').value;
            App.showMsg(''); if(!col || !App.data || !App.data.length) return;
            document.getElementById('loader').style.display='flex';

            setTimeout(() => {
                const n = Math.max(parseInt(document.getElementById('nSize').value,10)||5, 2);
                const filter = document.getElementById('chk-outliers').checked;
                let vals = App.data.map(r => parseFloat(r[col])).filter(v => !isNaN(v) && isFinite(v));
                if(filter) vals = SPC.iqrFilter(vals);

                const win = parseInt(document.getElementById('win-last').value, 10);
                if (win > 0 && win < vals.length) vals = vals.slice(-win);

                if (vals.length < 2) { App.showMsg('Poucos dados'); document.getElementById('loader').style.display='none'; return; }

                const f = SPC.factors(n);
                const meanG = SPC.mean(vals);
                const mrArr = SPC.movingRange(vals);
                const mrMean = SPC.mean(mrArr);
                const sInd = mrMean/1.128 || 0;
                
                const means=[], xInd=[];
                const rMean = SPC.avgRange(vals, n);
                const sWithin = (rMean>0 && f.d2>0) ? rMean/f.d2 : 0;
                for(let i=0; i<vals.length; i+=n) {
                    const ch = vals.slice(i, i+n);
                    if(ch.length===n) { means.push(SPC.mean(ch)); xInd.push(i/n + 1); }
                }
                const mMeans = SPC.mean(means);
                
                const lInd = { cl:meanG, ucl:meanG+3*sInd, lcl:meanG-3*sInd };
                const lMr = { cl:mrMean, ucl:3.267*mrMean, lcl:0 };
                const lBar = { cl:mMeans, ucl:mMeans+f.A2*rMean, lcl:mMeans-f.A2*rMean };

                const sOverall = SPC.stdDev(vals, meanG);
                const lie = parseFloat(document.getElementById('lie').value);
                const lse = parseFloat(document.getElementById('lse').value);
                App.state = { vals, m:meanG, sW:sWithin, sO:sOverall, lie, lse };

                Charts.draw('chart-top', vals, vals.map((_,i)=>i+1), lInd, 'IND', []);
                Charts.draw('chart-mr', mrArr, mrArr.map((_,i)=>i+2), lMr, 'MR', []);
                Charts.draw('chart-btm', means, xInd, lBar, 'XBAR', []);
                
                App.stats(vals, meanG, sWithin, sOverall, lie, lse);
                App.worker.postMessage({
                    raw: vals, mr: mrArr, means, limitsInd: lInd, limitsMr: lMr, limitsBar: lBar,
                    sigmaBar: (lBar.ucl-lBar.cl)/3,
                    rules: {
                        r1: document.getElementById('rule-1').checked,
                        r2: document.getElementById('rule-2').checked,
                        r3: document.getElementById('rule-3').checked,
                        r4: document.getElementById('rule-4').checked,
                        r5: document.getElementById('rule-5').checked
                    }
                });
            }, 50);
        },

        stats: (vals, m, sW, sO, lie, lse) => {
            const r = (l,v,t) => `<div class="stat-row" title="${t||''}"><span class="st-k">${l}</span><span class="st-v">${v}</span></div>`;
            const sVals = [...vals].sort((a,b)=>a-b);
            const min = sVals[0], max = sVals[sVals.length-1];
            
            let h = r('Média', m.toFixed(3)) + r('Mínimo', min.toFixed(3)) + r('Máximo', max.toFixed(3)) +
                    r('Amplitude', (max-min).toFixed(3)) + r('Desvio (Potencial)', sW.toFixed(4), 'Sigma within') + 
                    r('Desvio (Global)', sO.toFixed(4), 'Sigma overall') + r('N', vals.length);

            const capComment = document.getElementById('cap-comment');
            if(!isNaN(lie) && !isNaN(lse) && sW > 0 && sO > 0) {
                const cpk = Math.min((lse-m)/(3*sW), (m-lie)/(3*sW));
                const ppk = Math.min((lse-m)/(3*sO), (m-lie)/(3*sO));
                const cp = (lse-lie)/(6*sW);
                const pp = (lse-lie)/(6*sO);
                const ppm = (SPC.cdf(lie,m,sO) + (1-SPC.cdf(lse,m,sO)))*1e6;
                
                document.getElementById('h-cpk').innerText = cpk.toFixed(2);
                document.getElementById('h-ppk').innerText = ppk.toFixed(2);
                document.getElementById('h-ppm').innerText = Math.round(ppm).toLocaleString('pt-BR');

                const tag = (id, v) => {
                    const e = document.getElementById(id); e.style.display='inline-block';
                    e.innerText = v<1?'INCAPAZ':(v<1.33?'ACEITÁVEL':'EXCELENTE');
                    e.className = 'status-badge '+(v<1?'bdg-bad':(v<1.33?'bdg-warn':'bdg-ok'));
                };
                tag('tag-cpk', cpk); tag('tag-ppk', ppk);
                
                h += r('Cp', cp.toFixed(2), 'Capacidade potencial se o processo estivesse centrado.') + 
                     r('Cpk', cpk.toFixed(2), 'Capacidade real considerando deslocamento da média.') +
                     r('Pp', pp.toFixed(2)) + r('Ppk', ppk.toFixed(2));

                let txt = cpk < 1 ? 'Processo incapaz (Cpk < 1). ' : (cpk < 1.33 ? 'Processo marginal (1 ≤ Cpk < 1.33). ' : 'Processo capaz (Cpk ≥ 1.33). ');
                if (cp - cpk > 0.1) txt += 'Potencial de melhoria ajustando a centragem.';
                capComment.textContent = txt;
            } else {
                document.getElementById('h-cpk').innerText = '--';
                document.getElementById('h-ppk').innerText = '--';
                document.getElementById('h-ppm').innerText = '--';
                capComment.textContent = 'Informe LIE/LSE para calcular capabilidade.';
            }
            document.getElementById('stats-container').innerHTML = h;
        },

        onWork: (e) => {
            const v = e.data || [];
            App.lastViolations = v;
            const html = v.map(i => {
                const key = (i.chart||'') + ':' + i.x;
                const hasNote = App.eventNotes[key];
                const noteIcon = hasNote ? '<span class="material-icons" style="font-size:0.9rem; color:#10B981; margin-right:4px;">sticky_note_2</span>' : '';
                return `
                <div class="log-item ${i.t}" onclick="App.handleLogClick('${i.chart}', ${i.x}, ${Math.max(i.x-20,1)}, ${i.x+20})">
                    <div style="display:flex;justify-content:space-between; align-items:center">
                        <span style="font-weight:700;font-size:0.8rem">${i.c}</span>
                        <div style="display:flex; align-items:center">
                            ${noteIcon}
                            <span style="font-size:0.75rem;background:#E2E8F0;padding:0 5px;border-radius:4px">#${i.x}</span>
                        </div>
                    </div>
                    <div style="font-size:0.8rem;color:#64748B">${i.d} (${i.v.toFixed(2)})</div>
                </div>`;
            }).join('');
            document.getElementById('log-list').innerHTML = html || '<div style="padding:12px;font-size:0.8rem;color:#94A3B8">Nenhuma violação.</div>';
            
            const addM = (id, fd) => {
                if (!fd.length) return;
                Plotly.addTraces(id, { x: fd.map(z=>z.x), y: fd.map(z=>z.v), mode:'markers', type:'scattergl', marker:{symbol:'x',size:10,color:COLORS.alert} });
            };
            addM('chart-top', v.filter(z=>z.chart==='IND'));
            addM('chart-mr', v.filter(z=>z.chart==='MR'));
            addM('chart-btm', v.filter(z=>z.chart==='XBAR'));
            document.getElementById('loader').style.display='none';
        },

        downloadCSV: (filename, rows) => {
            const content = rows.map(r => r.map(x => `"${String(x).replace(/"/g, '""')}"`).join(';')).join('
');
            const blob = new Blob([content], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob); const a = document.createElement('a');
            a.href = url; a.download = filename; document.body.appendChild(a); a.click(); document.body.removeChild(a);
        },
        exportSeries: () => {
            if (!App.state.vals.length) return;
            App.downloadCSV('serie_cep.csv', [['indice','valor']].concat(App.state.vals.map((v,i)=>[i+1, v])));
        },
        exportEvents: () => {
            if (!App.lastViolations.length) return;
            const rows = [['grafico','indice','x','valor','regra','categoria','descricao','severidade','causa','acao']];
            App.lastViolations.forEach(i => {
                const note = App.eventNotes[(i.chart||'')+':'+i.x] || {};
                rows.push([i.chart, i.i, i.x, i.v, i.ruleId, i.c, i.d, i.t, note.cause||'', note.action||'']);
            });
            App.downloadCSV('eventos_cep.csv', rows);
        }
    };
    document.addEventListener('DOMContentLoaded', App.init);
</script>
</body>
</html>
